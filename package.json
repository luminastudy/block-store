{
  "name": "@lumina-study/block-store",
  "version": "0.1.1",
  "description": "Redux Toolkit store for managing lumina.json configurations from GitHub and GitLab repositories",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "spell": "cspell lint '**/*.{ts,js,md,json}' --gitignore",
    "spell:check": "cspell lint '**/*.{ts,js,md,json}' --gitignore",
    "prepare": "husky",
    "release": "release-it"
  },
  "keywords": [
    "redux",
    "redux-toolkit",
    "lumina",
    "configuration",
    "github",
    "gitlab",
    "state-management"
  ],
  "author": "Lumina Study",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luminastudy/block-store.git"
  },
  "bugs": {
    "url": "https://github.com/luminastudy/block-store/issues"
  },
  "homepage": "https://github.com/luminastudy/block-store#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.21.0",
  "dependencies": {
    "@gitbeaker/rest": "^43.8.0",
    "@lumina-study/block-schema": "^1.0.0",
    "@octokit/rest": "^22.0.1",
    "@reduxjs/toolkit": "^2.10.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.9",
    "cspell": "^9.3.2",
    "eslint": "^9.39.1",
    "eslint-config-agent": "^1.8.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "release-it": "^19.0.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9"
  }
}
